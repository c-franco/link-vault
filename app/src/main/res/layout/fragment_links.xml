<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_links"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.links.LinksFragment"
    android:background="@color/light_white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/text_list_links"
        android:paddingBottom="60dp"
        android:clipToPadding="false" />

    <TextView
        android:id="@+id/tv_empty_link_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_no_links"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>